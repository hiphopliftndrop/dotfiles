# GIT Aliases
alias g1='git --no-pager log --pretty=format:"%h, - %an, %ar : %s%n" --graph -1 $*'
alias g10='git --no-pager log --pretty=format:"%h, - %an, %ar : %s%n" --graph -10 $*'
alias g2='git --no-pager log --pretty=format:"%h, - %an, %ar : %s%n" --graph -2 $*'
alias g3='git --no-pager log --pretty=format:"%h, - %an, %ar : %s%n" --graph -3 $*'
alias g5='git --no-pager log --pretty=format:"%h, - %an, %ar : %s%n" --graph -5 $*'
alias gbsup='git branch --set-upstream-to=origin/$(git_current_branch)'
alias gcmr='git checkout master && git rebase --autostash'
alias gcme='git commit -e $*'
alias gdh='git diff HEAD'
alias gds='gid diff --staged'
alias gfr='git fetch && git rebase --autostash'
alias gfrp='git fetch && git rebase && git push'
alias gfp='git fetch --prune'
alias gl='git log --pretty=format:"%h, - %an, %ar : %s" --graph $*'
alias glb='git log --pretty=format:"%h, - %an, %ar : %s" --graph $(git rev-parse --abbrev-ref HEAD) $*'
alias glbr='git log --pretty=format:"%h, - %an, %ar : %s" --graph $(git rev-parse --abbrev-ref --symbolic-full-name @{u}) $*'
alias gpruner="git fetch --prune && (gb -vv | grep -e '\[origin/.*: gone\]' | awk '{print \$1}' | xargs git branch -d) && git rebase --autostash"
alias gprune="git fetch --prune && (gb -vv | grep -e '\[origin/.*: gone\]' | awk '{print \$1}' | xargs git branch -d)"
alias gpt='git push --tags $*'
alias gs='git show $*'
alias gst='git status $*'
alias gstu='git stash -u $*'
alias gw='git add -A && git commit -qm "WIPE SAVEPOINT" && git reset HEAD~1 --hard'
alias gu='git reset --soft HEAD^1'
